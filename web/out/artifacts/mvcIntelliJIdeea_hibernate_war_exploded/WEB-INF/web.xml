<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>webubb.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PositionController</servlet-name>
        <servlet-class>webubb.controller.PositionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestController</servlet-name>
        <servlet-class>webubb.controller.TestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RouteController</servlet-name>
        <servlet-class>webubb.controller.RouteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuizController</servlet-name>
        <servlet-class>webubb.controller.QuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BibliographyController</servlet-name>
        <servlet-class>webubb.controller.BibliographyController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PositionController</servlet-name>
        <url-pattern>/PositionController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TestController</servlet-name>
        <url-pattern>/TestController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RouteController</servlet-name>
        <url-pattern>/RouteController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuizController</servlet-name>
        <url-pattern>/QuizController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BibliographyController</servlet-name>
        <url-pattern>/BibliographyController</url-pattern>
    </servlet-mapping>

</web-app>